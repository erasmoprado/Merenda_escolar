function mostrarCardapio() {
  esconderTodasAsSessoes();
  document.getElementById('cardapio').style.display = 'block';
}

function mostrarSugestoes() {
  esconderTodasAsSessoes();
  document.getElementById('sugestoes').style.display = 'block';
}

function voltarMenu() {
  esconderTodasAsSessoes();
  document.getElementById('menu').style.display = 'block';
}

function esconderTodasAsSessoes() {
  document.getElementById('menu').style.display = 'none';
  document.getElementById('cardapio').style.display = 'none';
  document.getElementById('sugestoes').style.display = 'none';
}

function enviarSugestao(event) {
  event.preventDefault();

  const nome = document.getElementById('nome').value.trim();
  const sugestao = document.getElementById('sugestao').value.trim();

  if (nome && sugestao) {
    alert(`Obrigado pela sugestão, ${nome}!\n\nVocê sugeriu: "${sugestao}"`);

    document.getElementById('nome').value = '';
    document.getElementById('sugestao').value = '';

    voltarMenu();
  } else {
    alert("Por favor, preencha todos os campos!");
  }
}

